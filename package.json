{
  "name": "wcag-scanner",
  "version": "1.0.0",
  "description": "A comprehensive WCAG 2.1 Level AA accessibility scanner using Puppeteer and axe-core",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:unit": "mocha test/scanner.test.js test/utils.test.js --timeout 10000",
    "test:integration": "mocha test/integration.test.js --timeout 60000",
    "test:server": "mocha test/server.test.js --timeout 10000",
    "test:frontend": "mocha test/frontend.test.js --timeout 5000"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "a11y",
    "scanner",
    "audit",
    "axe-core"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axe-core": "^4.8.3",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "puppeteer": "^24.34.0"
  },
  "devDependencies": {
    "jsdom": "^27.4.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.0.2"
  }
}
